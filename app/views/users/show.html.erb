<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-content ">
        <span class="card-title"><%= @user.username %></span>
        <span class="card-content">
          <% if current_user && current_user.username == @user.username %>
            <p>Full name: <%= @user.full_name %> </p>
            <p>Email: <%= @user.email %> </p>
            <p>Mobile Phone: <%= @user.mobile_number %> </p>
          <% end %>
          <p>Verified: <%= @user.verified %> </p>
        </span>
      </div>

      <% if current_user && current_user.username == @user.username %>
        <div class="card-action">
          <%= link_to 'Change Account Details', edit_user_path(@user) %>
          <%= link_to 'Edit Authentication', edit_user_registration_path(@user) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
