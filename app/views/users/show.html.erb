<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-content ">
        <span class="card-title"><%= @user.username %></span>
        <span class="card-content">
          <% if current_user && current_user.username == @user.username %>
            <p>Full name: <%= @user.full_name %> </p>
            <p>Email: <%= @user.email %> </p>
            <p>Mobile Phone: <%= @user.mobile_number %> </p>
          <% end %>
          <p>Verified: <%= @user.verified %> </p>
        </span>
      </div>

      <% if current_user && current_user.username == @user.username %>
        <div class="card-action">
          <%= link_to 'Change Account Details', edit_user_registration_path(@user) %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @sell_ads.count > 0 %>
  <h4> Sell </h4>

  <table class="striped highlight centered">
    <thead>
      <tr>
          <th data-field="name">Title</th>
          <th data-field="price">Price</th>
          <th data-field="amount">Amount</th>
          <th data-field="action">Action</th>
      </tr>
    </thead>

    <tbody>
      <%= render(@sell_ads) || "No sell advertisements published yet." %>
    </tbody>
  </table>
<% end %>

<% if @buy_ads.count > 0 %>
<h4> Buy </h4>

<table class="striped highlight centered">
  <thead>
    <tr>
        <th data-field="name">Title</th>
        <th data-field="price">Price</th>
        <th data-field="amount">Amount</th>
        <th data-field="action">Action</th>
    </tr>
  </thead>

  <tbody>
    <%= render(@buy_ads) || "No buy advertisements published yet." %>
  </tbody>
</table>
<% end %>
