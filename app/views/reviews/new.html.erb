<div class="row">
  <div class="col s3"></div>
  <div class="col s6">
  <h2>New Review</h2>
  <%= form_for [@user, @review] do |f| %>

    <% if @review.errors.full_messages.any? %>
      <% @review.errors.full_messages.each do |error_message| %>
        <%= error_message %> <br />
      <% end %>
    <% end %>

    <%= f.label :rating, "Rating" %><br />
    <%= f.select :rating, options_for_select(Hash[Review.ratings.map { |k,v| [ k.split('_').first.capitalize, k ]}], @review.rating) %>
    <%= f.label :feedback, "Feedback" %><br />
    <%= f.text_area :feedback %>

    <%= f.submit 'Create Review', class: 'btn' %>
  <% end %>
  </div>
  <div class="col s3"></div>
</div>
