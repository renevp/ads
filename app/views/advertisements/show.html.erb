<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= @advertisement.title %></span>
        <span class="card-content">
          <p><%= number_to_currency(@advertisement.price_cents) %> | <%= @advertisement.amount %> |<%= @advertisement.ad_type.capitalize %></p>
        </span>
        <div class="card-content">
          <p><%= @advertisement.description %></p>
        </div>
      </div>
      <div class="card-action">
        <a href="#"><%= @advertisement.status.capitalize %></a>
        <%= link_to 'Edit Advertisement', edit_advertisement_path(@advertisement) %>
        <%= link_to 'Delete Advertisement', advertisement_path(@advertisement), method: :delete %>
      </div>
    </div>
  </div>
</div>
