<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-content ">
        <span class="card-title"><%= @advertisement.title %></span>
        <span class="card-content">
          <p>User: <%= @advertisement.user.username %> </p>
          <p>Price: <%= number_to_currency(@advertisement.price_cents) %> </p>
          <p>Amount: <%= @advertisement.amount %> </p>
          <p>Type: <%= @advertisement.ad_type.capitalize %></p>
        </span>
        <div class="card-content">
          <p>Description: <%= @advertisement.description %></p>
        </div>
      </div>

      <% if current_user && current_user.username == @advertisement.user.username %>
        <div class="card-action">
          <a href="#"><%= @advertisement.status.capitalize %></a>
          <%= link_to 'Edit Advertisement', edit_advertisement_path(@advertisement) %>
          <%= link_to 'Delete Advertisement', advertisement_path(@advertisement), method: :delete %>
        </div>
      <% end %>
    </div>
  </div>
</div>
