<%= simple_form_for @advertisement do |f| %>
  <%= f.input :title %>
  <%= f.input :description, as: :text %>
  <%= f.input :price_cents, label: 'Amount', placeholder: '0.00' %>
  <%= f.input :amount, label: 'Amount', placeholder: '0' %>
  <%= f.input :status, collection: Hash[Advertisement.statuses.map { |k,v| [ k.split('_').first.capitalize, k ]}] %>
  <%= f.input :ad_type, label: 'Type', collection: Hash[Advertisement.ad_types.map { |k,v| [ k.split('_').first.capitalize, k ]}] %>

  <%= f.submit 'Edit Advertisement', class: 'btn right' %>
<% end %>
