<div class="row edit-ad">
  <div class="col s3"></div>
  <div class="col s6">
  <%= form_for @advertisement do |f| %>
    <%= f.text_field :title, placeholder: 'Title'%>
    <%= f.text_area :description , placeholder: 'Description'%>
    <%= f.text_field :price_cents, placeholder: 'Price' %>
    <%= f.text_field :amount, placeholder: 'Amount' %>
    <%= f.select :status, options_for_select(Advertisement.statuses.collect{|s| s.first.capitalize}) %>
    <%= f.select :ad_type, options_for_select(Advertisement.ad_types.collect{|t| t.first.capitalize}) %>

    <%= f.submit 'Create Advertisement', class: 'btn' %>
  <% end %>
  </div>
  <div class="col s3"></div>
</div>
