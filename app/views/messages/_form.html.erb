<div class="row">
  <div class="col s3"></div>
  <div class="col s6">
    <%= form_for @message, url: advertisement_messages_path(@advertisement), html: { method: :post } do |f| %>
      <%= f.error_messages %>
      <%= f.hidden_field :parent_id %>
      <p>
        <%= f.label :body, "New Message" %><br />
        <%= f.text_area :body, rows: 8 %>
      </p>
      <p><%= f.submit "Post Message", class: 'btn' %></p>
    <% end %>
  </div>
  <div class="col s3"></div>
</div>
