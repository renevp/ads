<%= form_for @message, remote: true, url: advertisement_messages_path(@advertisement), html: { method: :post } do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :parent_id %>
  <p>
    <%= f.label :body, "New Message" %><br />
    <%= f.text_area :body, rows: 8 %>
  </p>
  <p><%= f.submit "Post Message", class: 'btn' %></p>
<% end %>
